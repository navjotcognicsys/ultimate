<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UltimeQuiz" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">@font/ptsans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Oleo Font Style -->
    <style name="OleoFontFamilyStyle" parent="Theme.UltimeQuiz">
        <item name="android:fontFamily">@font/oleo</item>
    </style>

    <!-- Rightoes Font Style -->
    <style name="RightFontFamilyStyle" parent="Theme.UltimeQuiz">
        <item name="android:fontFamily">@font/righteous</item>
    </style>

    <!-- Rightoes Font Style -->
    <style name="PhiloFontFamilyStyle" parent="Theme.UltimeQuiz">
        <item name="android:fontFamily">@font/philosopher</item>
    </style>

    <!-- Lobster Font Style -->
    <style name="IntroFontFamilyStyle" parent="Theme.UltimeQuiz">
        <item name="android:fontFamily">@font/lobster</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert.Bridge">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/philosopher</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>