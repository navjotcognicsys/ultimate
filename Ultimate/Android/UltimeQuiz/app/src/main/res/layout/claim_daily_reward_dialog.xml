<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/single_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/rectangle"
    android:backgroundTint="@color/textSecondary"
    app:cardElevation="5dp">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:text="@string/claim_reward_title"
            style="@style/RightFontFamilyStyle"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <ImageView
            android:layout_margin="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profits"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/claim_reward_subtitle"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>