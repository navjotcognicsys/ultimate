<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".Activities.AudioQuestionActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/secondary"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:elevation="0dp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/toolbar"
        android:background="@color/secondary"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_timer"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/dark"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/dark"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/question_points"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text=" pts"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/playr_coins"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="500 coins"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/dark"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/linear1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/audio_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E8E9EA"
                android:padding="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pause_audio"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_pause"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/question_audio"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_play"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/stop_audio"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_stop"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/audio_linear"
                android:id="@+id/question_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/rectangle"
                android:drawableStart="@drawable/ic_light"
                android:backgroundTint="#2196F3"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_marginTop="20dp"
                android:layout_below="@id/question_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/answer1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textStyle="bold"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/secondary"/>
                <TextView
                    android:id="@+id/answer2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/secondary"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/answer3"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textStyle="bold"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/secondary"/>
                <TextView
                    android:id="@+id/answer4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/secondary"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_below="@id/linear3"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/show_hint"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_eye"
                    android:layout_height="wrap_content"
                    android:text="Show hint"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#2196F3"/>
                <TextView
                    android:id="@+id/cinq_cinq"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/cinq_cinq"
                    android:text="50/50"
                    android:visibility="gone"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#009688"/>
                <TextView
                    android:id="@+id/free_coins"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/coin"
                    android:text="Free coins"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#F44336"/>
            </LinearLayout>
            <Button
                android:id="@+id/submit_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear4"
                android:background="@drawable/rectangle"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/accent"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_banner_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.startapp.sdk.ads.banner.Banner
        android:id="@+id/startapp_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>