<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/secondary"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/accent"/>
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/category_img"
            android:layout_below="@id/view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#E62E4259"
            android:padding="10dp"
            android:textColor="@color/white"
            style="@style/RightFontFamilyStyle"
            android:layout_alignParentBottom="true"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number_of_subcategories"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E62E4259"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/ic_subcategory"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/number_of_quizzes"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E62E4259"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_category"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/number_of_questions"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E61A2A3B"
                android:textSize="10sp"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>