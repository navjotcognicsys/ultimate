<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/dark"
    tools:context=".Activities.QuizQuestionsTypeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:elevation="0dp"/>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/type"
            android:layout_marginBottom="40dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <LinearLayout
            android:id="@+id/linear1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/secondary"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="3.5dp"
                android:layout_marginEnd="3.5dp"
                android:background="@color/accent"/>
            <TextView
                android:id="@+id/text_questions_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/ic_text"
                android:text="@string/text_questions"
                android:textColor="@color/white"
                android:textAllCaps="false"
                style="@style/RightFontFamilyStyle"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/linear2"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/secondary"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="3.5dp"
                android:layout_marginEnd="3.5dp"
                android:background="@color/accent"/>
            <TextView
                android:id="@+id/image_questions_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/ic_image"
                android:text="@string/images_questions"
                android:textColor="@color/white"
                android:textAllCaps="false"
                style="@style/RightFontFamilyStyle"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/secondary"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="3.5dp"
                android:layout_marginEnd="3.5dp"
                android:background="@color/accent"/>
            <TextView
                android:id="@+id/audio_questions_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_audio"
                android:text="@string/audio_questions"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:padding="15dp"
                style="@style/RightFontFamilyStyle"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_banner_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.startapp.sdk.ads.banner.Banner
        android:id="@+id/startapp_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>