<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".Activities.LeaderboardsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/leaderboards_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/secondary"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"/>
    <ImageView
        android:id="@+id/crown"
        android:layout_below="@id/leaderboards_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/secondary"
        android:src="@drawable/crown"/>
    <RelativeLayout
        android:layout_below="@id/crown"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/home_design"
            android:backgroundTint="@color/secondary" />
        <LinearLayout
            android:id="@+id/linear_champions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_second"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:civ_border_width="5dp"
                app:civ_border_color="#32C5FF"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_first"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:civ_border_width="5dp"
                app:civ_border_color="#F2A304"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_tirth"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:civ_border_width="5dp"
                app:civ_border_color="#44D7B6"/>
        </LinearLayout>
        <ScrollView
            android:layout_below="@id/linear_champions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:background="@drawable/home_banner"
                    android:backgroundTint="#F2A304"
                    android:elevation="0dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:id="@+id/rank"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="1"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/lightGray"
                            android:id="@+id/image_1"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/rank"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/username_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/image_1"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/points_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:background="@drawable/home_banner"
                    android:backgroundTint="#32C5FF"
                    android:elevation="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:id="@+id/rank2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="2"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/lightGray"
                            android:id="@+id/image_2"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/rank2"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/username_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/image_2"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/points_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/home_banner"
                    android:backgroundTint="#44D7B6"
                    android:elevation="0dp"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:id="@+id/rank3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="3"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/lightGray"
                            android:id="@+id/image_3"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/rank3"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/username_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/image_3"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/points_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/all_players_recycler"
                    android:layout_below="@+id/linear3"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="60dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_banner_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.startapp.sdk.ads.banner.Banner
        android:id="@+id/startapp_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>