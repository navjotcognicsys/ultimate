<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CompleteProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/secondary"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:elevation="0dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/image_linear"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/black"/>
                <ImageView
                    android:id="@+id/change_image"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/ic_image"
                    android:contentDescription="@string/app_name" />
                <ImageView
                    android:id="@+id/allow_permission"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/ic_image"
                    android:contentDescription="@string/app_name" />
                <ProgressBar
                    android:id="@+id/image_progress_bar_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="20dp"
                    tools:ignore="NotSibling" />
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_edit_text"
                android:layout_below="@id/image_linear"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_profile"
                app:startIconTint="@color/dark"
                android:textColorHint="@color/dark"
                app:boxStrokeColor="@color/dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/facebook_edit_text"
                android:layout_below="@id/username_edit_text"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_facebook"
                app:startIconDrawable="@drawable/ic_facebook"
                app:startIconTint="@color/dark"
                android:textColorHint="@color/dark"
                app:boxStrokeColor="@color/dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textUri"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/twitter_edit_text"
                android:layout_below="@id/facebook_edit_text"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_twitter"
                app:startIconDrawable="@drawable/ic_twitter"
                app:startIconTint="@color/dark"
                android:textColorHint="@color/dark"
                app:boxStrokeColor="@color/dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textUri"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/instagram_edit_text"
                android:layout_below="@id/twitter_edit_text"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_insta"
                app:startIconDrawable="@drawable/instagram"
                app:startIconTint="@color/dark"
                android:textColorHint="@color/dark"
                app:boxStrokeColor="@color/dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textUri"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/instagram_edit_text"
                android:textStyle="bold"
                android:background="@drawable/login_btn"
                android:backgroundTint="@color/dark"
                android:textColor="@color/white"
                android:text="@string/save_info"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>